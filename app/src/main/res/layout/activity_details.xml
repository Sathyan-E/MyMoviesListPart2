<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".DetailsActivity">

    <ImageView
        android:id="@+id/posterimage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/titleLabel"
        style="@style/details_label"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:text="@string/title_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/posterimage" />

    <TextView
        android:id="@+id/title_value"
        style="@style/details_value"
        android:layout_marginStart="5dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toEndOf="@+id/titleLabel"
        app:layout_constraintTop_toBottomOf="@+id/posterimage" />

    <TextView
        android:id="@+id/overview_label"
        style="@style/details_label"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:text="@string/overview_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleLabel" />

    <TextView
        android:id="@+id/overview_value"
        style="@style/details_value"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/overview_label" />

    <TextView
        android:id="@+id/rating_label"
        style="@style/details_label"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:text="@string/rating_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/overview_value" />

    <TextView
        android:id="@+id/rating_value"
        style="@style/details_value"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toEndOf="@+id/rating_label"
        app:layout_constraintTop_toBottomOf="@+id/overview_value" />

    <TextView
        android:id="@+id/releasedate_label"
        style="@style/details_label"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:text="@string/release_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating_label" />

    <TextView
        android:id="@+id/releasedate_value"
        style="@style/details_value"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toEndOf="@+id/releasedate_label"
        app:layout_constraintTop_toBottomOf="@+id/rating_value" />
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>